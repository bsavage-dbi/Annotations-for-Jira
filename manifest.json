{
    "name": "Jira Awesome-Ificator",
    "description": "Add additional features on Jira to facilitate personal and individual issue management.",
    "version": "0.1",
    "permissions": [
    "tabs","<all_urls>"
    ],
    "browser_action": {
        "default_icon": "icon.png"
    },
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

    "content_scripts": [
        {
        "matches": [
            "https://*/*"
            ],
        "js": ["javascript_jira_add_drop_downs.js"],
        "run_at": "document_end"
        }
    ], 
    "manifest_version":2
}